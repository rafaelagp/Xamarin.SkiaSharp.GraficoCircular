<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:GraficoCircular"
	x:Class="GraficoCircular.GraficoCircularPage"
	Title="Exemplo de aplicação: GraficoCircular">
	
	<StackLayout Orientation="Horizontal" HeightRequest="150" HorizontalOptions="Center" VerticalOptions="Start">
		<local:GraficoCircular WidthRequest="150"
			Porcentagem="34" TamanhoDaFonte="12"
			CorDeFundo="Blue" CorDePreenchimento="Green" CorDoCanvas="Yellow"/>

		<local:GraficoCircular HeightRequest="110" WidthRequest="110" 
			HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand"
			Porcentagem="90" />
	</StackLayout>
	
</ContentPage>